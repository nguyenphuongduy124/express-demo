extends ../layouts/common.pug

block content
   h3 Hello Users
      .d-flex.justify-content-between.mt-3
         div
            a.btn.btn-primary(href="/users/create") New user
         form.d-flex(action="/users/search", method="GET")
            input(type="text" name="q" class="form-control")
            button(class="btn btn-primary" class="ml-2") Search

   table.table
      tr
         th Avatar
         th Name
         th Phone
         th Actions
      each user in users
         tr
            td
               img(src=user.avatar, width="40", height="40")
            td= user.name
            td= user.phone 
            td
               a.btn.btn-light(href="/users/" + user.id) View
   