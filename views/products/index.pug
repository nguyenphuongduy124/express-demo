extends ../layouts/common.pug

block content
  h3 Products
  if products
    .row
      each product in products
        .col-3
          .card
            .card-body
              img.img-fluid(src=product.image, alt=product.name)
              h3.card-title #{product.name}
              p.card-text #{product.description}
              a.btn.btn-primary(href="/cart/add/" + product.id) Add to cart
    .row.mt-3.mb-5
      ul.pagination.mx-auto
        li.page-item
          a.page-link(href='#') Previous
        if pageLoad 
          each item in pageLoad
            li.page-item
            a.page-link(href='?page='+item) #{item}
          a.page-link(href='#') Next

